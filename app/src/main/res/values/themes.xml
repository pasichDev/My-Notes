<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme SplashScreen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/colorBackgroundSplash</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/ThemeGreenNoBackground</item>
    </style>

    <!-- Theme Dynamic -->
    <style name="AppThemeDynamic" parent="Theme.Material3.DynamicColors.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Цвет и настройки статусбара и навбара -->
        <item name="android:navigationBarColor">?attr/colorPrimaryInverse</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <!-- Theme Dark_Blue no Background Light -->
    <style name="ThemeDarkBlueNoBackground" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/darkBlue_theme_no_background_light_primary</item>
        <item name="colorOnPrimary">@color/darkBlue_theme_no_background_light_onPrimary</item>
        <item name="colorPrimaryContainer">
            @color/darkBlue_theme_no_background_light_primaryContainer
        </item>
        <item name="colorOnPrimaryContainer">
            @color/darkBlue_theme_no_background_light_onPrimaryContainer
        </item>
        <item name="colorSecondary">@color/darkBlue_theme_no_background_light_secondary</item>
        <item name="colorOnSecondary">@color/darkBlue_theme_no_background_light_onSecondary</item>
        <item name="colorSecondaryContainer">
            @color/darkBlue_theme_no_background_light_secondaryContainer
        </item>
        <item name="colorOnSecondaryContainer">
            @color/darkBlue_theme_no_background_light_onSecondaryContainer
        </item>
        <item name="colorTertiary">@color/darkBlue_theme_no_background_light_tertiary</item>
        <item name="colorOnTertiary">@color/darkBlue_theme_no_background_light_onTertiary</item>
        <item name="colorTertiaryContainer">
            @color/darkBlue_theme_no_background_light_tertiaryContainer
        </item>
        <item name="colorOnTertiaryContainer">
            @color/darkBlue_theme_no_background_light_onTertiaryContainer
        </item>
        <item name="colorError">@color/darkBlue_theme_no_background_light_error</item>
        <item name="colorErrorContainer">@color/darkBlue_theme_no_background_light_errorContainer
        </item>
        <item name="colorOnError">@color/darkBlue_theme_no_background_light_onError</item>
        <item name="colorOnErrorContainer">
            @color/darkBlue_theme_no_background_light_onErrorContainer
        </item>
        <item name="android:colorBackground">@color/darkBlue_theme_no_background_light_background
        </item>
        <item name="colorOnBackground">@color/darkBlue_theme_no_background_light_onBackground</item>
        <item name="colorSurface">@color/darkBlue_theme_no_background_light_surface</item>
        <item name="colorOnSurface">@color/darkBlue_theme_no_background_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/darkBlue_theme_no_background_light_surfaceVariant
        </item>
        <item name="colorOnSurfaceVariant">
            @color/darkBlue_theme_no_background_light_onSurfaceVariant
        </item>
        <item name="colorOutline">@color/darkBlue_theme_no_background_light_outline</item>
        <item name="colorOnSurfaceInverse">
            @color/darkBlue_theme_no_background_light_inverseOnSurface
        </item>
        <item name="colorSurfaceInverse">@color/darkBlue_theme_no_background_light_inverseSurface
        </item>
        <item name="elevationOverlayColor">@color/darkBlue_theme_no_background_light_surfaceTint
        </item>
        <item name="colorPrimaryInverse">@color/darkBlue_theme_no_background_light_inversePrimary
        </item>
        <item name="android:navigationBarColor">?attr/colorPrimaryInverse</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>


    <!-- Theme Green no Background Light -->
    <style name="ThemeGreenNoBackground" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/green_theme_no_background_light_primary</item>
        <item name="colorOnPrimary">@color/green_theme_no_background_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/green_theme_no_background_light_primaryContainer
        </item>
        <item name="colorOnPrimaryContainer">
            @color/green_theme_no_background_light_onPrimaryContainer
        </item>
        <item name="colorSecondary">@color/green_theme_no_background_light_secondary</item>
        <item name="colorOnSecondary">@color/green_theme_no_background_light_onSecondary</item>
        <item name="colorSecondaryContainer">
            @color/green_theme_no_background_light_secondaryContainer
        </item>
        <item name="colorOnSecondaryContainer">
            @color/green_theme_no_background_light_onSecondaryContainer
        </item>
        <item name="colorTertiary">@color/green_theme_no_background_light_tertiary</item>
        <item name="colorOnTertiary">@color/green_theme_no_background_light_onTertiary</item>
        <item name="colorTertiaryContainer">
            @color/green_theme_no_background_light_tertiaryContainer
        </item>
        <item name="colorOnTertiaryContainer">
            @color/green_theme_no_background_light_onTertiaryContainer
        </item>
        <item name="colorError">@color/green_theme_no_background_light_error</item>
        <item name="colorErrorContainer">@color/green_theme_no_background_light_errorContainer
        </item>
        <item name="colorOnError">@color/green_theme_no_background_light_onError</item>
        <item name="colorOnErrorContainer">@color/green_theme_no_background_light_onErrorContainer
        </item>
        <item name="android:colorBackground">@color/green_theme_no_background_light_background
        </item>
        <item name="colorOnBackground">@color/green_theme_no_background_light_onBackground</item>
        <item name="colorSurface">@color/green_theme_no_background_light_surface</item>
        <item name="colorOnSurface">@color/green_theme_no_background_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/green_theme_no_background_light_surfaceVariant
        </item>
        <item name="colorOnSurfaceVariant">@color/green_theme_no_background_light_onSurfaceVariant
        </item>
        <item name="colorOutline">@color/green_theme_no_background_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/green_theme_no_background_light_inverseOnSurface
        </item>
        <item name="colorSurfaceInverse">@color/green_theme_no_background_light_inverseSurface
        </item>
        <item name="elevationOverlayColor">@color/green_theme_no_background_light_surfaceTint</item>
        <item name="colorPrimaryInverse">@color/green_theme_no_background_light_inversePrimary
        </item>
        <item name="android:navigationBarColor">?attr/colorPrimaryInverse</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="fab_custom" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">15dp</item>
        <item name="elevation">7dp</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="layout_dodgeInsetEdges">bottom</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|enterAlwaysCollapsed</item>
    </style>

    <!-- Стиль для заголовка активности -->
    <style name="headActivityText">
        <item name="fontFamily">@font/railway_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль для параграфа -->
    <style name="paragraphText">
        <item name="fontFamily">@font/railway_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Стиль для заголовка BottomSheetsDialog -->
    <style name="headDialogText" parent="headActivityText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Позиционирование елементов в BottomSheetsDialog -->
    <style name="marginDialogItem">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <!-- Стиль иконок в BottomSheetsDialog -->
    <style name="iconDialogList" parent="marginDialogItem">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?android:colorPrimary</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- Стиль иконок в ActionPanel -->
    <style name="iconActionPanel" parent="marginDialogItem">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <!-- Основной стиль меток в Chip -->
    <style name="ChipStyleCustom" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">?attr/colorTertiary</item>
    </style>


    <!-- Стиль меток chip в для MoreNoteDialog  -->
    <style name="ChipStyleCustomChoiceNote" parent="ChipStyleCustom"></style>

    <style name="styleAboutButtonBottom" parent="@style/Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10dp</item>
        <item name="fontFamily">@font/railway_medium</item>
    </style>

    <!-- Стиль SearchBottomSheetsDialog  -->
    <style name="SearchDialog" parent="BottomSheetsStyleCustom">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="behavior_draggable">false</item>
        <item name="behavior_hideable">false</item>
    </style>

    <!-- Стиль CustomBottomSheets  -->
    <style name="BottomSheetsStyleCustom" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Стиль rootView BottomSheets  -->
    <style name="rootDialogLayout">
        <item name="android:background">@drawable/background_bottom_sheets</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <!-- Стиль rootView BottomSheets (NoteSettings)  -->
    <style name="rootDialogLayoutTop">
        <item name="android:background">@drawable/background_bottom_sheets</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <!-- Стиль для картинок из экрана приветсвий  -->
    <style name="imageViewHello">
        <item name="android:contentDescription">@string/srcfeatures</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="itemNoteTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:fontFamily">@font/railway_medium</item>
        <item name="android:maxLines">@integer/countLinesNoteTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="itemNotePreview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:maxLines">@integer/maxLinesItemNoteValue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="itemNoteTag" parent="ChipStyleCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>


</resources>