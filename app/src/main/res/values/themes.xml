<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Red color theme. -->
    <style name="ThemeRed" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основной цвет -->
        <item name="colorPrimary">@color/red_Primary</item>
        <item name="colorPrimaryVariant">@color/red_PrimaryVariant</item>
        <!-- Второстепенный цвет, используеться в настройках -->
        <item name="colorSecondary">@color/red_Secondary</item>
        <!-- Цвет значка спиннер -->
        <item name="colorControlNormal">@color/red_Drawable</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Цвет меню item -->
        <item name="android:itemTextAppearance">@style/textItemColor</item>
        <!-- Цвет иконок -->
        <item name="iconDrawableTint">@color/red_Drawable</item>
        <!-- Цвет иконок тулбара -->
        <item name="colorHiden">@color/hiden</item>
        <!-- Цвет названия заметок и датыа такаже цвета текста. изменить в темной теме -->
        <item name="colorTextNote">@color/EditViewDark</item>

    </style>


