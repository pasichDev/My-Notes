<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Blue color theme. -->
    <style name="ThemeBlue" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryBackground">@color/colorPrimaryBackground</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorLight">@color/darkLight</item>

        <item name="colorAccent">@color/colorPrimaryBackground</item>
        <item name="colorAccentIcon">@color/colorPrimaryVariant</item>
        <item name="colorControlNormal">@color/black</item>

        <item name="android:navigationBarColor">@color/colorPrimaryBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <!-- SplashStyle-->
    <style name="ThemeBlueSplash" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimaryBackground">@color/colorPrimaryBackground</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorLight">@color/darkLight</item>
        <item name="android:statusBarColor">?attr/colorPrimaryBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="headActivityText">
        <item name="fontFamily">@font/railway_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="headDialogText">
        <item name="fontFamily">@font/railway_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tagName">
        <item name="fontFamily">@font/railway_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iconDialogList" parent="marginDialogItem">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="marginDialogItem">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">?attr/colorAccentIcon</item>
    </style>

</resources>