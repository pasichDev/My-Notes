<resources>

    <!-- Blue color theme. -->
    <style name="ThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryBackground">@color/colorPrimaryBackground</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorLight">@color/darkLight</item>

        <!-- Status bar set. -->
        <item name="android:statusBarColor">?attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabTextColor">?attr/colorPrimaryVariant</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>

    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?attr/colorBackground</item>
    </style>


    <!-- Style HeadText Category -->
    <style name="headTextCategory">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">3dp</item>

    </style>


    <!-- - Анимация всплывающего окна-->
    <style name="share_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    //Button Style

    <style name="editTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


</resources>