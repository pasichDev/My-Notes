<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


        <variable
            name="coffee"
            type="com.pasich.mynotes.data.model.Coffee" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        app:strokeColor="?attr/colorSurfaceVariant"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <ImageView
                android:id="@+id/imageCoffee"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/contentCoffee"
                tools:src="@drawable/ic_cup_off_coffee" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/railway_medium"
                android:textSize="16sp"
                tools:text="TitleCoffee" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/priceCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="?colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="0.25$" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>