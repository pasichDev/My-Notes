<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="newNote"
            type="boolean" />

        <variable
            name="valuesText"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/view_settings_note"
            layout="@layout/view_settings_note" />

        <include
            android:id="@+id/seekbar_view"
            layout="@layout/view_seekbar_size_text" />


    <LinearLayout
        android:id="@+id/groupLayouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="@{valuesText ?  View.VISIBLE :View.GONE , default = gone}">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/share"
                android:textSize="@dimen/textSizeDialog" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/changeSettingsVIew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="visible">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/changeSettingsLayout"
                android:src="@drawable/ic_change_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/changeSettingsLayout"
                android:textSize="@dimen/textSizeDialog" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addShortCutLauncher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="@{newNote ? View.GONE : View.VISIBLE, default = gone}">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/addShortCutLauncher"
                android:src="@drawable/ic_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/addShortCutLauncher"
                android:textSize="@dimen/textSizeDialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/translateNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="@{valuesText ?  View.VISIBLE :View.GONE , default = gone}">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/translateNote"
                android:src="@drawable/ic_translate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/translateNote"
                android:textSize="@dimen/textSizeDialog" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/moveToTrash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:visibility="@{newNote ? View.GONE : View.VISIBLE, default = gone}"
            android:padding="8dp">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/trashNotes"
                android:src="@drawable/ic_delete_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/trashNotes"
                android:textSize="@dimen/textSizeDialog" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/noSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/noSave"
                android:src="@drawable/ic_close_search_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/noSave"
                android:textSize="@dimen/textSizeDialog" />
        </LinearLayout>


        <include
            android:id="@+id/note_info"
            layout="@layout/view_info_item" />

    </LinearLayout>
    </LinearLayout>

</layout>