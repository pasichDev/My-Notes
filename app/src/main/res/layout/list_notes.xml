<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView

        android:id="@+id/imageFolder"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameNotesL"
        style="@style/textColorNameList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:text="NameNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageFolder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateNotesL"
        style="@style/textColorDateList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="DateNotes"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageFolder"
        app:layout_constraintTop_toBottomOf="@+id/nameNotesL" />

</androidx.constraintlayout.widget.ConstraintLayout>
