<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.pasich.mynotes.ui.presenter.MainPresenter" />

        <variable
            name="emptyNotes"
            type="boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    style="@style/headActivityText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginConstraintLayoutOnBothSides"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="@string/notes" />

                <ImageButton
                    android:id="@+id/moreActivity"
                    style="?android:attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="0"
                    android:contentDescription="@string/more"
                    android:onClick="@{(view) -> presenter.moreActivityClick()}"
                    app:srcCompat="@drawable/ic_out_more" />

            </LinearLayout>


            <android.widget.SearchView
                android:id="@+id/actionSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_search_view"
                android:closeIcon="@drawable/ic_close_search_view"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                android:queryHint="@string/search"
                android:searchHintIcon="@drawable/ic_search"
                android:searchIcon="@drawable/ic_search"
                tools:targetApi="lollipop_mr1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="@{emptyNotes ? View.GONE : View.VISIBLE,  default=visible}" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/emptyListVIew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{emptyNotes ? View.VISIBLE : View.GONE, default=gone}">

                <ImageView
                    android:id="@+id/emptyListImage"
                    android:layout_width="152dp"
                    android:layout_height="152dp"
                    android:contentDescription="@string/emptyListMain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_notes_empty" />

                <TextView
                    android:id="@+id/emptyListText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/emptyListMain"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emptyListImage" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


        <include
            android:id="@+id/actionInclude"
            layout="@layout/action_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:visibility="gone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newNotesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/NewNote"
            android:onClick="@{(view) -> presenter.newNotesClick()}"
            app:backgroundTint="?attr/colorPrimaryBackground"
            app:elevation="7dp"
            app:layout_anchor="@id/list_notes"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@color/white" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>