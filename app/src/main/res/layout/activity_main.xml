<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.pasich.mynotes.ui.presenter.MainPresenter" />

        <variable
            name="emptyNotes"
            type="boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        tools:context=".ui.view.activity.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarMainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_behavior=".utils.behavior.FixedAppBarLayoutBehavior"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginConstraintLayoutOnBothSides"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|snap">

                <TextView
                    android:id="@+id/textView"
                    style="@style/headActivityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:padding="6dp"
                    android:text="@string/notes" />

                <ImageButton
                    android:id="@+id/moreActivity"
                    style="?android:attr/actionButtonStyle"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:contentDescription="@string/more"
                    android:onClick="@{(view) -> presenter.moreActivityClick()}"
                    app:srcCompat="@drawable/ic_out_more" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/layoutSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_search_view"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|snap">

                <ImageButton
                    style="?android:attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/search"
                    android:onClick="@{(view) -> presenter.startSearchDialog()}"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:onClick="@{(view) -> presenter.startSearchDialog()}"
                    android:padding="10dp"
                    android:text="@string/search"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    tools:ignore="SpUsage" />

                <ImageButton
                    android:id="@+id/sortButton"
                    style="?android:attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/sortHead"
                    android:onClick="@{(view) -> presenter.sortButton()}"
                    android:src="@drawable/ic_sort" />

                <ImageButton
                    android:id="@+id/formatButton"
                    style="?android:attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/cd_format"
                    android:onClick="@{(view) -> presenter.formatButton()}"
                    android:src="@drawable/ic_edit_format_list" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                app:layout_scrollFlags="noScroll" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                app:strokeColor="?attr/colorSurfaceVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cloud_auto_backup" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/previewNote"
                            style="@style/itemNotePreview"
                            android:paddingHorizontal="15dp"
                            android:layout_gravity="center"
                            android:text="Включите автоматическое резервное копирование чтобы не потерять важные данные" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:visibility="@{emptyNotes ? View.GONE : View.VISIBLE,  default=visible}"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

        <include
            android:id="@+id/includeEmpty"
            layout="@layout/view_empty_notes" />

        <include
            android:id="@+id/actionInclude"
            layout="@layout/action_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:visibility="gone"
            app:layout_anchorGravity="bottom|right|end" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newNotesButton"
            style="@style/fab_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/NewNote"
            android:onClick="@{(view) -> presenter.newNotesClick()}"
            app:layout_anchor="@id/list_notes"
            app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
            app:srcCompat="@drawable/ic_add" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>