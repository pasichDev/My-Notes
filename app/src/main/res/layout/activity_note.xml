<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.pasich.mynotes.ui.presenter.NotePresenter" />

        <variable
            name="activateEdit"
            type="boolean"
            android:value="false" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noteLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.NoteActivity">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/view_toolbar_note" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            android:scrollbarSize="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/notesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autofillHints="no"
                    android:background="@null"

                    android:fontFamily="@font/railway_medium"
                    android:hint="@string/noteTitle"
                    android:inputType="textMultiLine"
                    android:maxLength="@integer/maxLengthNotesTitle"
                    android:maxLines="@integer/countLinesNoteTitle"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@drawable/textview_colors"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/valueNote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="no"
                    android:background="#00FFFFFF"
                    android:enabled="@{activateEdit, default=false}"
                    android:focusable="@{activateEdit, default=false}"
                    android:focusableInTouchMode="@{activateEdit, default=false}"
                    android:gravity="start|top"
                    android:hint="@string/hintTextNote"
                    android:inputType="textAutoComplete|text|textCapSentences|textMultiLine"
                    android:longClickable="true"
                    android:maxLength="@integer/maxLengthNotesTextValue"
                    android:minHeight="100dp"
                    android:padding="20dp"
                    android:textColor="@drawable/textview_colors" />

            </LinearLayout>
        </ScrollView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recordMessges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_note" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/actionPanelNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_action_panel"
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/sourceStart"
                style="@style/iconDialogList"
                android:contentDescription="@string/sourceNotes"
                android:onClick="@{(view) -> presenter.sourceNote()}"
                app:srcCompat="@drawable/ic_source"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/editActive"
                style="@style/iconDialogList"
                android:contentDescription="@string/editSelectTagForNote"
                android:onClick="@{(view) -> presenter.activateEditNote()}"
                android:visibility="@{activateEdit ? View.GONE : View.VISIBLE}"
                app:srcCompat="@drawable/ic_edit"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/speechStart"
                style="@style/iconDialogList"
                android:contentDescription="@string/holdOnSpeec"
                android:visibility="@{activateEdit ? View.VISIBLE : View.GONE}"
                app:srcCompat="@drawable/ic_mic"
                app:tint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>