<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/rootDialogLayout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/action_panel_activate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_ripple_top_dialog"
            android:orientation="horizontal"
            android:padding="@dimen/paddingItems">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/selectAll"
                android:src="@drawable/ic_check_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/paddingItems"
                android:text="@string/selectAll"
                android:textSize="@dimen/textSizeItems" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/shareLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/paddingItems">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/paddingItems"
                android:text="@string/share"
                android:textSize="@dimen/textSizeItems" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/tagLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/paddingItems">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/tag"
                android:src="@drawable/ic_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/paddingItems"
                android:text="@string/tag"
                android:textSize="@dimen/textSizeItems" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addNoteForDesktop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/paddingItems"
        android:visibility="gone">

        <ImageView
            style="@style/iconDialogList"
            android:contentDescription="@string/addShortCutLauncher"
            android:src="@drawable/ic_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/paddingItems"
            android:text="@string/addShortCutLauncher"
            android:textSize="@dimen/textSizeItems" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/moveToTrash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/paddingItems">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/trashNotes"
                android:src="@drawable/ic_delete_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/paddingItems"
                android:text="@string/trashNotes"
                android:textSize="@dimen/textSizeItems" />
    </LinearLayout>

        <include
            android:id="@+id/includeInfo"
            layout="@layout/view_info_item" />


    </LinearLayout>
</FrameLayout>