<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/deleteTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/paddingItems">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:contentDescription="@string/deleteTag"
            android:src="@drawable/ic_delete_note" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/paddingItems"
            android:text="@string/deleteTag"
            android:textSize="@dimen/textSizeItems" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renameTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginEnd="14dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/paddingItems">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:contentDescription="@string/renameTag"
            android:src="@drawable/ic_rename" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/paddingItems"
            android:text="@string/renameTag"
            android:textSize="@dimen/textSizeItems" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/visibleTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/paddingItems">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:contentDescription="@string/deleteTag"
            android:src="@drawable/ic_tag" />

        <TextView
            android:id="@+id/textVisibilityTag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/paddingItems"
            android:textSize="@dimen/textSizeItems" />


    </LinearLayout>


</LinearLayout>