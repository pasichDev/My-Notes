<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/rootDialogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/dialog_message" />

        <LinearLayout
            android:id="@+id/telegramSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/paddingItems">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/telegram"
                android:src="@drawable/ic_telegram" />

            <TextView
                style="@style/itemTextBottomSheets"
                android:text="@string/telegram_nick" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/emailSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bottom_ripple"
            android:orientation="horizontal"
            android:padding="@dimen/paddingItems">

            <ImageView
                style="@style/iconDialogList"
                android:contentDescription="@string/ratingApp"
                android:src="@drawable/ic_email"
                app:tint="@null" />

            <TextView
                style="@style/itemTextBottomSheets"
                android:text="@string/email_address" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>