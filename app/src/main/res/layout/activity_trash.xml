<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="presenter"
            type="com.pasich.mynotes.ui.presenter.TrashPresenter" />

        <variable
            name="emptyNotesTrash"
            type="boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_trash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.TrashActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar_actionbar"
                layout="@layout/view_toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/headTextTitle"
                    style="@style/headActivityText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/trashN"
                    android:layout_weight="1"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/cleanTrash"
                    style="?android:attr/actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/trashClean"
                    android:visibility="@{emptyNotesTrash ? View.GONE : View.VISIBLE}"
                    android:onClick="@{(view) -> presenter.cleanTrashDialogStart()}"
                    app:srcCompat="@drawable/ic_trash_menu"
                    app:tint="@color/black" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ListTrash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layoutAnimation="@anim/recycle_view_animation"
                android:visibility="@{emptyNotesTrash ? View.GONE : View.VISIBLE}"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/emptyListVIew"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:visibility="@{emptyNotesTrash ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headTextTitle"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/emptyListText"
                android:fontFamily="@font/railway_medium"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emptyListTrash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <include
            android:id="@+id/actionInclude"
            layout="@layout/action_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:visibility="gone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>