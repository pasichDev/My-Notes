<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_head_dialog" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSystem"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        app:chipSpacingVertical="1dp"
        tools:ignore="RtlSymmetry">

        <com.google.android.material.chip.Chip
            android:id="@+id/addTagChip"
            app:chipIconVisible="true"
            app:iconStartPadding="10dp"
            app:chipIconSize="18dp"
            android:visibility="gone"
            android:text="@string/createTag"
            app:chipIcon="@drawable/ic_add_tag_dialog"
            style="@style/ChipStyleCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.Chip
            android:id="@+id/dellTagChip"
            app:chipIconVisible="true"
            android:visibility="gone"
            android:text="@string/deleteTag"
            app:iconStartPadding="10dp"
            app:chipIconSize="18dp"
            app:chipIcon="@drawable/ic_delete_notes_tag"
            style="@style/ChipStyleCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.google.android.material.chip.ChipGroup>

    <include
        android:id="@+id/includedInput"
        android:visibility="gone"
        layout="@layout/view_new_tag_input" />
</LinearLayout>