<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrashActivity">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar" />


    <GridView
        android:numColumns="1"
        android:id="@+id/ListNotesTrash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/emptyTrash"
        android:layout_width="179dp"
        android:layout_height="29dp"
        android:layout_marginStart="50dp"
        android:visibility="gone"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="@string/trashNull"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.522" />

    <ImageView
        android:id="@+id/imageEmptyTrash"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/emptyTrash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_trash_empty"
        android:contentDescription="@string/cd_emptyTrash" />


</androidx.constraintlayout.widget.ConstraintLayout>