<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
        <variable
            name="Note"
            type="com.pasich.mynotes.data.database.model.Note" />
    </data>

    <LinearLayout
        android:id="@+id/item_Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_result"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameNote"
            style="@style/itemNoteTitle"
            android:text="@{Note.title}"
            android:visibility="@{Note.title.length() >= 2 ? View.VISIBLE : View.GONE }" />

        <TextView
            android:id="@+id/previewNote"
            style="@style/itemNotePreview"
            android:text="@{Note.value.length() > 200 ? Note.value.substring(0,200) : Note.value}" />


        <TextView
            android:id="@+id/tagNote"
            style="@style/itemNoteTag"
            android:text="@{'#'+Note.tag}"
            android:visibility="@{Note.tag.length() >= 1 ? View.VISIBLE : View.GONE}" />
    </LinearLayout>
</layout>