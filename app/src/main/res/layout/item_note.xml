<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />


        <variable
            name="DataNote"
            type="com.pasich.mynotes.data.model.DataNote" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        app:cardBackgroundColor="@{DataNote.getNote().checked ? @color/item_bindig_note_surface_variant : @color/item_bindig_note_surface}"
        app:strokeColor="@{DataNote.getNote().checked ? @color/item_bindig_note_primary :  @color/item_bindig_note_surface_variant}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/marginItemsNote"
            android:paddingTop="15dp"
            android:paddingBottom="@{DataNote.getNote().tag.length() >= 1 ? @dimen/marginItemsNoteChip : @dimen/marginItemsNote}">

            <TextView
                android:id="@+id/nameNote"
                style="@style/itemNoteTitle"
                android:text="@{DataNote.getNote().title}"
                android:visibility="@{DataNote.getNote().title.length() >= 1 ? View.VISIBLE : View.GONE }"
                tools:text="Title Note" />

            <TextView
                android:id="@+id/previewNote"
                style="@style/itemNotePreview"
                android:text="@{DataNote.getNote().valuePreview}"
                tools:text="Preview Note Check"
                android:visibility="@{DataNote.getNote().getValue().length() >= 1 ? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/listItemHidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOutline"
                android:textSize="12sp"
                android:visibility="@{DataNote.getItemListNotes().size() >= 1 ? View.VISIBLE : View.GONE}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listItemsRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_action"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagNote"
                    style="@style/chipTagItemNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{'#'+DataNote.getNote().tag}"
                    android:visibility="@{DataNote.getNote().tag.length() >= 1 ? View.VISIBLE : View.GONE}" />


            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>