<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="checkedItem"
            type="boolean" />

        <variable
            name="noteItem"
            type="com.pasich.mynotes.data.notes.Note" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{checkedItem ? @drawable/item_note_background_selected :  @drawable/item_selected}">


        <TextView
            android:id="@+id/nameNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/railway_medium"
            android:maxLines="2"
            android:text="@{noteItem.title}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="@{noteItem.title.length() >= 2 ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toTopOf="@+id/previewNote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/previewNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="5"
            android:gravity="center_vertical"
            android:text="@{noteItem.value.length() > 200 ? noteItem.value.substring(0,200) : noteItem.value}"
            app:layout_constraintBottom_toTopOf="@+id/tagNote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.chip.Chip
            android:id="@+id/tagNote"
            style="@style/ChipStyleCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@{'#'+noteItem.tag}"
            android:visibility="@{noteItem.tag.length() >= 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/previewNote" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>