<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
    app:cardBackgroundColor="?attr/colorPrimary"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/actionPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible">


        <ImageButton
            android:id="@+id/action_panel_share"
            style="@style/iconActionPanel"
            android:contentDescription="@string/share"
            android:src="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/action_panel_restore"
            style="@style/iconActionPanel"
            android:contentDescription="@string/restore"
            android:src="@drawable/ic_restore_trash"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/action_panel_delete"
            style="@style/iconActionPanel"
            android:contentDescription="@string/deleteSelectTag"
            android:src="@drawable/ic_delete_note" />

        <ImageButton
            android:id="@+id/closeActionPanel"
            style="@style/iconActionPanel"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_close_search_view" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

