<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme SplashScreen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/DefaultThemeNoBackground</item>
    </style>

    <!-- Theme Dynamic -->
    <style name="AppThemeDynamic" parent="Theme.Material3.DynamicColors.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryInverse</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <!-- Base theme -->
    <style name="themeBaseDark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:navigationBarColor">?attr/colorPrimaryInverse</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

