        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="behavior_draggable">false</item>
        <item name="behavior_hideable">false</item>
    </style>

    <!-- Стиль CustomBottomSheets  -->
    <style name="BottomSheetsStyleCustom" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Стиль rootView BottomSheets  -->
    <style name="rootDialogLayout">
        <item name="android:background">@drawable/background_bottom_sheets</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <!-- Стиль rootView BottomSheets (NoteSettings)  -->
    <style name="rootDialogLayoutTop">
        <item name="android:background">@drawable/background_bottom_sheets</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <!-- Стиль для картинок из экрана приветсвий  -->
    <style name="imageViewHello">
        <item name="android:contentDescription">@string/srcfeatures</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="itemNoteTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:fontFamily">@font/railway_medium</item>
        <item name="android:maxLines">@integer/countLinesNoteTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="itemNotePreview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:maxLines">@integer/maxLinesItemNoteValue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="itemNoteTag" parent="ChipStyleCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

