<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:iconSpaceReserved="false">
                <ListPreference
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultValue="default"
                    app:entries="@array/spechMain_enteries"
                    app:entryValues="@array/spechMain_values"
                    app:iconSpaceReserved="false"
                    app:key="speechLanguage"
                    app:title="@string/spechLaunguage"
                    app:useSimpleSummaryProvider="true" />
                <ListPreference
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultValue="line"
                    app:entries="@array/spechOutputSettings_name"
                    app:entryValues="@array/spechOutputSettings_value"
                    app:iconSpaceReserved="false"
                    app:key="setSpechOutputText"
                    app:title="@string/setSpechOutputText"
                    app:useSimpleSummaryProvider="true" />

                <Preference
                    app:iconSpaceReserved="false"
                    app:key="errorSpechService"
                    app:isPreferenceVisible="false"
                    android:title="@string/Function_not_available"
                    android:summary="@string/pressToInfo"
                    />

        </PreferenceCategory>

</PreferenceScreen>

